<Window x:Class="VKR.View.ContractAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKR.View"
        mc:Ignorable="d"
        Title="ContractAddWindow" Height="400" Width="600">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition  />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition  />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="NameTextBox" Text="Договор" Margin="8,8,8,8" />
        <TextBlock x:Name="AgeTextBox" Text="Номер договора" Grid.Row="1" Margin="8,8,8,8" />

        <TextBlock  Text="Договор" Margin="8,8,8,8" />
        <TextBlock  Text="Номер договора" Grid.Row="1" Margin="8,8,8,8" />

        <TextBox Text="{Binding Name}" Grid.Column="1" Margin="8,8,8,8" />
        <TextBox Text="{Binding Age}" Grid.Column="1" Grid.Row="1" Margin="8,8,8,8" />
        <ComboBox  Name="ClientBox" Grid.Column="3" DisplayMemberPath="Name"></ComboBox>
        <ComboBox  Name="InsuranceBox" Grid.Column="3" Grid.Row="1" DisplayMemberPath="Type"></ComboBox>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="94,10,0,202" Width="152">
            <Button IsDefault="True" Click="Accept_Click" Height="63" >OK</Button>
            <Button IsCancel="True" Height="63" >Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
